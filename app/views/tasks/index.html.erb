<h1>タスク 一覧</h1>
<%= link_to '投稿画面へ', new_task_path, class:"line-bottom" %>
<% @tasks.each do |task| %>
<div>
<%= task.title %>
<%= link_to '詳細', task_path(task.id), class:"line-bottom" %>
<%= link_to '編集', edit_task_path(task.id), class:"line-bottom" %>
<%= link_to '削除', task_path(task), method: :delete, data: {confirm: '削除しますか？'}, class:"line-bottom" %>
</div>
<% end %>